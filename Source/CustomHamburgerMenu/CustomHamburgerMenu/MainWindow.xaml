<Window x:Class="CustomHamburgerMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomHamburgerMenu"
        xmlns:uc="clr-namespace:CustomHamburgerMenu.UC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <uc:HamburgerMenu IsMenuOpen="False"
                      x:Name="hamburgerMenu">
        <uc:HamburgerMenu.LeftContent>
            <Grid Background="Red">
            </Grid>
        </uc:HamburgerMenu.LeftContent>
        <uc:HamburgerMenu.MainContent>
            <DockPanel Background="Green">
            </DockPanel>
        </uc:HamburgerMenu.MainContent>
    </uc:HamburgerMenu>
    
</Window>
