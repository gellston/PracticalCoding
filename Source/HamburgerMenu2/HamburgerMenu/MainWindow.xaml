<Window x:Class="HamburgerMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HamburgerMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:uc="clr-namespace:HamburgerMenu.UC">
    <DockPanel>
        <uc:HamburgerMenuControl DockPanel.Dock="Left"
                                 MenuName="Test">
            <uc:HamburgerMenuControl.MenuContent>
                <ListView HorizontalContentAlignment="Stretch">
                    <Button Height="40"></Button>
                    <Button Height="40"></Button>
                    <Button Height="40"></Button>
                    <Button Height="40"></Button>
                </ListView>
            </uc:HamburgerMenuControl.MenuContent>
        </uc:HamburgerMenuControl>
        <Grid Background="Green"></Grid>
    </DockPanel>
</Window>
