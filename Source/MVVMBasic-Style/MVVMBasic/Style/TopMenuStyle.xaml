<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type DockPanel}" x:Key="TopMenuPanel">
        <Setter Property="Background" Value="Orange"></Setter>
        <Setter Property="DockPanel.Dock" Value="Top"></Setter>
        <Setter Property="Height" Value="40"></Setter>
    </Style>
    <Style TargetType="{x:Type Button}" x:Key="TopMenuButton">
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="DockPanel.Dock" Value="Left"></Setter>
        <Setter Property="Width" Value="40"></Setter>
    </Style>

    <Style TargetType="{x:Type Button}" 
               x:Key="TopMenuNewButton"
               BasedOn="{StaticResource TopMenuButton}">
        <Setter Property="Content" Value="New"></Setter>
    </Style>
</ResourceDictionary>