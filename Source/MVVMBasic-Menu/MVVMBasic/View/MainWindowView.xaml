<Window x:Class="MVVMBasic.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMBasic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainWindowViewModel}">
    <DockPanel>
        <DockPanel Width="80"
                    DockPanel.Dock="Left">
            <Button DockPanel.Dock="Top"
                    Height="40"
                    Content="A Menu"
                    Command="{Binding AMenuCommand}"></Button>
            <Button DockPanel.Dock="Top"
                    Height="40"
                    Content="B Menu"
                    Command="{Binding BMenuCommand}"></Button>
            <Button DockPanel.Dock="Top"
                    Height="40"
                    Content="C Menu"
                    Command="{Binding CMenuCommand}"></Button>
            <Button DockPanel.Dock="Top"
                    Height="40"
                    Content="D Menu"
                    Command="{Binding DMenuCommand}"></Button>
            <Border></Border>
        </DockPanel>
        <ContentPresenter></ContentPresenter>
    </DockPanel>
</Window>
