                <DataTemplate DataType="{x:Type model:Student}">
                    <DockPanel Height="30">
                        <TextBlock Text="{Binding Name}"
                                   Width="50"
                                   DockPanel.Dock="Left"></TextBlock>
                        <TextBlock Text="{Binding Age}"
                                   Margin="10,0,0,0"
                                   Background="Red"></TextBlock>
                    </DockPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </UniformGrid>
</Window>
